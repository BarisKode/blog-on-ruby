<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>
<br>
<%= link_to 'New Article', new_article_path %>
<br><br>
<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3" class="col-lg-3">Action</th>
  </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td class="text-center">
          <div class="btn-group" role="group">
            <%= link_to 'Show', article, class: 'btn btn-default btn-sm' %>
            <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-default btn-sm' %>
            <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm' %>
          </div>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<script>
    $('#pill_articles').addClass('active');
</script>