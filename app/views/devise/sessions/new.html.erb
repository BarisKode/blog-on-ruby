<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f| %>
      <div class="col-lg-offset-4 col-lg-4">
        <h2>Please Sign In</h2>
      </div>

      <div class="col-lg-offset-4 col-lg-4">
        <%= f.label :email, class: 'sr-only' %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email address', autofocus: true %>
      </div>

      <div class="col-lg-offset-4 col-lg-4" style="margin-top: 10px">
        <%= f.label :password, class: 'sr-only' %>
        <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
      </div>


      <div class="col-lg-offset-4 col-lg-4" style="padding-left: 40px">
        <% if devise_mapping.rememberable? -%>
            <div class="checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>
      </div>

      <div class="col-lg-offset-4 col-lg-4">
        <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
      </div>

      <div class="col-lg-offset-4 col-lg-4" style="margin-top: 10px">
        <%= render "devise/shared/links" %>
      </div>
  <% end %>
</div>